<div class="container">
  <div class="food-title">
    <h2>푸드 트럭</h2>
  </div>
  <!--<div class="mx-auto">-->
    <% @foods.each do |food| %>
      <button type="button" class="btn btn-warning m-1 food-item" data-toggle="modal" data-target="#food-modal-<%=food.id %>">
        <%= image_tag "ttruck0#{food.iconid}.png", class:"food-icon"%><strong style="margin-right:7px;"><%= food.title %></strong>
      </button>
      
      <!--이하 보이지 않는 모달-->
      <div class="modal fade" id="food-modal-<%=food.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalCenterTitle"><%= food.title %></h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <%= food.content %>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <button type="button" class="btn btn-primary">Save changes</button>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <!--</div>-->
  <br>
  <br/>
  <%# if user_signed_in? %>
    <%= link_to 'New Food', new_food_path %>
  <%# end %>
</div>
