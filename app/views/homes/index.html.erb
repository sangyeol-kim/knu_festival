<!--스크립트 부분-->
<script>
  $(function(){
$(window).scroll(function(){  //스크롤하면 아래 코드 실행
       var num = $(this).scrollTop();  // 스크롤값
       if( num > 725 ){  // 스크롤을 36이상 했을 때
          $(".lineup-img").css("position","fixed");
       } else if (num < 725 || num == 725){
           $(".lineup-img").css("position","static");
       }
  });
});
$(function(){
  $(window).scroll(function(){  //스크롤하면 아래 코드 실행
       var num = $(this).scrollTop();  // 스크롤값
       if( num > 1105 ){  // 스크롤을 36이상 했을 때
          $(".lineup-img01").css("position","fixed");
       } else if(num < 1105 || num == 1105){
         $(".lineup-img01").css("position" , "fixed")
       }
  });
});
  
$(document).ready(function(){
  $('.arrow').on('click',function(){
    $('.arrow').animate([
  // keyframes
  { transform: 'translateY(0px)' }, 
  { transform: 'translateY(-300px)' }
], { 
  // timing options
  duration: 1000,
  iterations: Infinity
});
  })
})
</script>
